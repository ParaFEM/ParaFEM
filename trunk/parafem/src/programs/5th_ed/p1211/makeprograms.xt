module    = ../../../../include
lib       = ../../../../lib

FC=ftn

#  Flags
#FFLAGS= -c -I$(module) -V -g -Mbounds -traceback
FFLAGS= -c -I$(module) -V -fastsse -Mlarge_arrays

LDFLAGS= -L$(lib) -lParaFEM_mpi -lblas

.SUFFIXES: .o .f90

all: p1211
default: all


p1211: p1211.o
	$(FC) p1211.o -o p1211 $(LDFLAGS)

p1211.o: p1211.f90
	$(FC) p1211.f90 $(FFLAGS)

clean:
	rm -f *.o

execlean:
	rm -f p1211

relink: p1211

