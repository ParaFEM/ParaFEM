module    = ../../../include
lib       = ../../../lib

FC=ftn

#  Flags
FFLAGS= -c -I$(module) -V -fast

LDFLAGS= -L$(lib) -lParaFEM -lblas -larpack_XT4

.SUFFIXES: .o .f90

all: p1212
default: all


p1212: p1212.o
	$(FC) p1212.o -o p1212 $(LDFLAGS)

p1212.o: p1212.f90
	$(FC) p1212.f90 $(FFLAGS)

clean:
	rm -f *.o

execlean:
	rm -f p1212

relink: p1212

