module    = ../../../../include
lib       = ../../../../lib

FC=ftn

#  Flags
#FFLAGS= -c -I$(module) -V -g -Mbounds -traceback
FFLAGS= -c -I$(module) -V -fastsse -Mlarge_arrays

LDFLAGS= -L$(lib) -lParaFEM_mpi -lblas

.SUFFIXES: .o .f90

all: xx1
default: all


xx1: xx1.o
	$(FC) xx1.o pf-elastic.o -o xx1 $(LDFLAGS)

xx1.o: xx1.f90
	$(FC) xx1.f90 $(FFLAGS)

clean:
	rm -f *.o

execlean:
	rm -f xx1

relink: xx1

