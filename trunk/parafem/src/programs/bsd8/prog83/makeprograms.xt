module    = ../../../../include
lib       = ../../../../lib

FC=ftn

#  Flags
#FFLAGS= -c -I$(module) -V -g -Mbounds -traceback
FFLAGS= -c -I$(module) -V -fastsse -Mlarge_arrays

LDFLAGS= -L$(lib) -lParaFEM_mpi -lBEM_mpi -lblas

.SUFFIXES: .o .f90

all: prog83
default: all


prog83: prog83.o
	$(FC) prog83.o -o prog83 $(LDFLAGS)

prog83.o: prog83.f90
	$(FC) prog83.f90 $(FFLAGS)

clean:
	rm -f *.o

execlean:
	rm -f prog83

relink: prog83

