module    = ../../../../include
lib       = ../../../../lib

FC=ftn

#  Flags
FFLAGS= -c -I$(module) -V -fastsse -Mlarge_arrays

LDFLAGS= -L$(lib) -lParaFEM_mpi -lblas

.SUFFIXES: .o .f90

all: p129
default: all


p129: p129.o
	$(FC) p129.o -o p129 $(LDFLAGS)

p129.o: p129.f90
	$(FC) p129.f90 $(FFLAGS)

clean:
	rm -f *.o

execlean:
	rm -f p129

relink: p129

