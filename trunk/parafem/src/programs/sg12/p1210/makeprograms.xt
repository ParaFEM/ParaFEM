module    = ../../../../include
lib       = ../../../../lib

FC=ftn

#  Flags
FFLAGS= -c -I$(module) -V -fast

LDFLAGS= -L$(lib) -lParaFEM -lblas

.SUFFIXES: .o .f90

all: p1210
default: all


p1210: p1210.o
	$(FC) p1210.o -o p1210 $(LDFLAGS)

p1210.o: p1210.f90
	$(FC) p1210.f90 $(FFLAGS)

clean:
	rm -f *.o

execlean:
	rm -f p1210

relink: p1210

