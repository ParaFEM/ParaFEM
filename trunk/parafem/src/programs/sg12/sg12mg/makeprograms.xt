module    = ../../../../include
lib       = ../../../../lib

FC=ftn

#  Flags
FFLAGS= -c -I$(module) -V -fastsse -Mlarge_arrays

LDFLAGS= -L$(lib) -lParaFEM -lblas

.SUFFIXES: .o .f90

all: sg12mg
default: all


sg12mg: sg12mg.o
	$(FC) sg12mg.o -o sg12mg $(LDFLAGS)

sg12mg.o: sg12mg.f90
	$(FC) sg12mg.f90 $(FFLAGS)

clean:
	rm -f *.o

execlean:
	rm -f sg12mg

install:
	rm -f *.o
	rm -f *.mod
	mv sg12mg ../../../../bin

relink: sg12mg

