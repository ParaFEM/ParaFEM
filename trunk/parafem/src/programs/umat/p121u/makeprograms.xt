module    = ../../../../include
lib       = ../../../../lib

FC=ftn

#  Flags
#FFLAGS= -c -I$(module) -V -g -Mbounds -traceback
FFLAGS= -c -I$(module) -V -fastsse -Mlarge_arrays

LDFLAGS= -L$(lib) -lParaFEM_mpi -lblas

.SUFFIXES: .o .f90

all: p121u
default: all


p121u: p121u.o
	$(FC) p121u.o pf-elastic.o -o p121u $(LDFLAGS)

p121u.o: p121u.f90
	$(FC) p121u.f90 $(FFLAGS)

clean:
	rm -f *.o

execlean:
	rm -f p121u

relink: p121u

