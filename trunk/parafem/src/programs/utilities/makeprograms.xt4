module    = ../../../include
lib       = ../../../lib

FC=ftn

#  Flags
FFLAGS= -c -I$(module) -V -fast

LDFLAGS= -L$(lib) -lParaFEM -lblas

.SUFFIXES: .o .f90

all: d2off
default: all


d2off: d2off.o
	$(FC) d2off.o -o d2off $(LDFLAGS)

d2off.o: d2off.f90
	$(FC) d2off.f90 $(FFLAGS)

clean:
	rm -f *.o

execlean:
	rm -f d2off

relink: d2off

