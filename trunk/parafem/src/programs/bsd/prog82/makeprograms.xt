module    = ../../../../include
lib       = ../../../../lib

FC=ftn

#  Flags
#FFLAGS= -c -I$(module) -V -g -Mbounds -traceback
FFLAGS= -c -I$(module) -V -fastsse -Mlarge_arrays

LDFLAGS= -L$(lib) -lBEM -lblas

.SUFFIXES: .o .f90

all: prog82
default: all


prog82: prog82.o
	$(FC) prog82.o -o prog82 $(LDFLAGS)

prog82.o: prog82.f90
	$(FC) prog82.f90 $(FFLAGS)

clean:
	rm -f *.o

execlean:
	rm -f prog82

relink: prog82

