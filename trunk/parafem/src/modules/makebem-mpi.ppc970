FC = mpif90

#  Flags
FFLAGS= -O3 -qstrict -qtune=ppc970 -qarch=ppc970 -qcache=auto -q64

share  = precision.o global_variables.o
bem    = bem_lib_p.o

.SUFFIXES: .f90 .o

lib: $(PWD)/shared/$(share) $(PWD)/bem/$(bem)
	ar -r libBEM_mpi.a $(shared) $(bem)

.f90.o:
	$(FC) -c $(FFLAGS) $(PWD)/shared/precision.f90
	$(FC) -c $(FFLAGS) $(PWD)/shared/global_variables.f90
	$(FC) -c $(FFLAGS) $(PWD)/bem/bem_lib_p.f90
	
clean:
	rm *.o *.mod

install:
	rm *.o
	mv *.mod ../../include
	mv *.a ../../lib
