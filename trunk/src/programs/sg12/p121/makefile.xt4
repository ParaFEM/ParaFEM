base_dir     = /home/e72/e72/zzalslm3/libraries
module_dir   = $(base_dir)/ParaFEM-2.0/include
libs_dir     = $(base_dir)/ParaFEM-2.0/lib

FC=ftn

#  Flags
FFLAGS= -c -g -I$(module_dir) -V -fast

LDFLAGS= -L$(libs_dir) -lParaFEM -lblas

.SUFFIXES: .o .f90

all: p121
default: all


p121: p121.o
	$(FC) p121.o -o p121 $(LDFLAGS)

p121.o: p121.f90
	$(FC) p121.f90 $(FFLAGS)

clean:
	rm -f *.o

execlean:
	rm -f p121

relink: p121

